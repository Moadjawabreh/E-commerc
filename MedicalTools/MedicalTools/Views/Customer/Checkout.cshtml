@using System.Globalization
@using static MedicalTools.Controllers.CustomerController
@model List<cartProductTuples>
	<div class="hero-wrap hero-bread" style="background-image: url('images/bg_6.jpg');">
		<div class="container">
			<div class="row no-gutters slider-text align-items-center justify-content-center">
				<div class="col-md-9 ftco-animate text-center">
					<p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Checkout</span></p>
					<h1 class="mb-0 bread">Checkout</h1>
				</div>
			</div>
		</div>
	</div>

	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xl-8 ftco-animate">
					<form class="billing-form">
						<h3 class="mb-4 billing-heading">Billing Details</h3>
						<div class="row align-items-end">
							<div class="col-md-6">
								<div class="form-group">
									<label for="firstname">Name</label>
									<input type="text" class="form-control" placeholder="">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
								<label for="Location">Location</label>
									<input type="text" class="form-control" placeholder="">
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="phone">Phone</label>
									<input type="text" class="form-control" placeholder="">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="emailaddress">Email Address</label>
									<input type="text" class="form-control" placeholder="">
								</div>
							</div>							
						</div>
					</form><!-- END -->

				<div class="row justify-content-center">
					<div class="col col-lg-5 col-md-6 mt-5 cart-wrap ftco-animate">
						<div class="cart-total mb-3">
							<h3>Cart Totals</h3>
							<p class="d-flex">
								@{
									double Total = 0;
									@foreach (var obj in Model)
									{
										var itemSubtotal = obj.Product.Price * obj.Cart.Quantity;
										Total += itemSubtotal;
									}
								}
								<span>Subtotal</span>
								<span>@Total.ToString("C", CultureInfo.GetCultureInfo("en-JO"))</span>
							</p>
							<p class="d-flex">
								<span>Discount</span>
								<span>0.00</span>
							</p>
							<hr>
							<p class="d-flex total-price">
								<span>Total</span>
								<span>@Total.ToString("C", CultureInfo.GetCultureInfo("en-JO"))</span>
							</p>
						</div>
						<p class="text-center"><a asp-controller="Customer" asp-action="Payment" class="btn btn-primary py-3 px-4">Place an order</a></p>
					</div>
				</div>
				</div> <!-- .col-md-8 -->
			</div>
		</div>
	</section> <!-- .section -->

	